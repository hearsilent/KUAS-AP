<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffffff">
    <FrameLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_dimen"
        android:background="@color/actionbar_color">

        <com.andexert.library.RippleView
            ripple:rv_centered="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            ripple:rv_rippleDuration="280">
            <ImageView
                android:id="@+id/drawer_indicator"
                android:layout_width="@dimen/actionbar_dimen"
                android:layout_height="@dimen/actionbar_dimen"
                android:scaleType="centerInside"
                android:background="@drawable/drawer_selector"
                android:layout_gravity="start"
                />
        </com.andexert.library.RippleView>

        <TextView
            android:id="@+id/indicator_style"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/actionbar_dimen"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="最新消息"
            android:gravity="center"
            android:background="@drawable/drawer_selector"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"/>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:id="@+id/Logout"
            android:gravity="center_vertical|center_horizontal">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:scaleType="centerInside"
                android:background="@drawable/ic_settings_white_48dp" />
        </RelativeLayout>
    </FrameLayout>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notification_listView"
                android:layout_above="@+id/changePage"
                android:layout_centerVertical="true"
                tools:listitem="@layout/notification_item"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/changePage"
                android:layout_above="@id/Page"
                android:paddingTop="7sp"
                android:paddingBottom="7sp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/PageUp"
                    android:layout_marginRight="70sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上一頁"
                        android:layout_centerHorizontal="true"
                        android:textColor="#ff000000"
                        android:textStyle="bold"
                        android:id="@+id/PageUpTextView"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/NowPage"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="70sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="第1頁"
                        android:id="@+id/NowPageTextView"
                        android:textColor="#ff000000"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/PageDown">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下一頁"
                        android:layout_centerHorizontal="true"
                        android:textColor="#ff000000"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:id="@+id/Page"
                android:layout_marginTop="5dp"
                android:paddingBottom="5sp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/RelativeLayout"
                    android:layout_marginRight="40sp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/imageView1"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ic_announcement_black_48dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最新消息"
                        android:id="@+id/textView1"
                        android:layout_below="@id/imageView1"
                        android:layout_centerHorizontal="true"
                        android:textSize="12sp"
                        android:textColor="#ff000000" />
                </RelativeLayout>

                <View android:layout_height="25sp" android:background="@color/bar_grey"
                    android:layout_toRightOf="@+id/RelativeLayout"
                    android:layout_centerVertical="true"
                    android:layout_width="1sp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/RelativeLayout"
                    android:layout_toEndOf="@+id/RelativeLayout"
                    android:id="@+id/RelativeLayout2"
                    android:layout_marginLeft="40sp"
                    android:layout_marginRight="40sp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/imageView2"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ic_phone_grey600_48dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="常用電話"
                        android:id="@+id/textView2"
                        android:layout_below="@id/imageView2"
                        android:layout_centerHorizontal="true"
                        android:textSize="12sp"
                        android:textColor="@color/page_grey" />
                </RelativeLayout>

                <View android:layout_height="25sp" android:background="@color/bar_grey"
                    android:layout_toRightOf="@+id/RelativeLayout2"
                    android:layout_centerVertical="true"
                    android:layout_width="1sp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/RelativeLayout2"
                    android:layout_toEndOf="@+id/RelativeLayout2"
                    android:id="@+id/RelativeLayout3"
                    android:layout_marginLeft="40sp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/imageView3"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ic_event_note_grey600_48dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 行事曆 "
                        android:id="@+id/textView3"
                        android:layout_below="@id/imageView3"
                        android:layout_centerHorizontal="true"
                        android:textSize="12sp"
                        android:textColor="@color/page_grey" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="start"
            android:background="#ffffffff">

            <ListView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/white"
                android:id="@+id/drawerlistView"
                android:layout_above="@+id/aboutlistView"
                android:layout_alignParentTop="true"/>
            <ListView
                android:id="@+id/aboutlistView"
                android:layout_width="180dp"
                android:gravity="center"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
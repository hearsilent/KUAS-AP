<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffffff">
    <FrameLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_dimen"
        android:background="@color/actionbar_color">

        <TextView
            android:id="@+id/indicator_style"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/actionbar_dimen"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="更改課程"
            android:gravity="center"
            android:background="@drawable/drawer_selector"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/actionbar_dimen"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="返回"
            android:gravity="center"
            android:background="@drawable/drawer_selector"
            android:layout_gravity="right|center_vertical"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginLeft="5dp" />

    </FrameLayout>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:id="@+id/CourseList"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_above="@id/Page"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:id="@+id/Page"
                android:layout_marginTop="5dp"
                android:paddingBottom="5sp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayout"
                    android:layout_marginRight="50sp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/imageView1"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ic_add_circle_grey600_48dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新增課程"
                        android:id="@+id/textView1"
                        android:layout_below="@id/imageView1"
                        android:layout_centerHorizontal="true"
                        android:textSize="12sp"
                        android:textColor="@color/grey" />
                </RelativeLayout>

                <View android:layout_height="25sp" android:background="@color/bar_grey"
                    android:layout_toRightOf="@+id/relativeLayout"
                    android:layout_centerVertical="true"
                    android:layout_width="1sp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/relativeLayout"
                    android:layout_toEndOf="@+id/relativeLayout"
                    android:layout_marginLeft="50sp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/imageView2"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ic_cancel_black_48dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="刪除課程"
                        android:id="@+id/textView2"
                        android:layout_below="@id/imageView2"
                        android:layout_centerHorizontal="true"
                        android:textSize="12sp"
                        android:textColor="#ff000000" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
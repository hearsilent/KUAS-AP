<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/thumbColor</item>
        <item name="colorAccent">@color/actionbar_color2</item>
        <item name="alertDialogProTheme">@style/AppTheme.FlavoredMaterial</item>
    </style>
    <style name="AppTheme.FlavoredMaterial" parent="Theme.AlertDialogPro.Material.Light">
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/thumbColor</item>
        <item name="colorAccent">@color/actionbar_color2</item>
        <item name="android:windowTitleStyle">@style/AdpTitleStyle</item>
        <item name="adpButtonBarNegativeButtonStyle">@style/AdpNormalButtonStyle</item>
        <item name="adpButtonBarNeutralButtonStyle">@style/AdpNormalButtonStyle</item>
    </style>
    <style name="AdpNormalButtonStyle" parent="Widget.AlertDialogPro.Material.Light.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="AdpTitleStyle" parent="DialogWindowTitle.AlertDialogPro.Material.Light">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
</resources>
